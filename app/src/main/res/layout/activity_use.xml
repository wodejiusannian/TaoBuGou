<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.taogegou.ui_third.UseActivity">
    <RelativeLayout
        android:id="@+id/rl_use_top"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_use_back"
            android:src="@mipmap/back"
            android:layout_height="match_parent"
            android:layout_width="40dp"
            />
        <TextView
            android:text="如何使用"
            android:id="@+id/tv_buy_title"
            android:textColor="@color/main_write"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pb_use_loading"
        android:background="#61fa08"
        android:layout_below="@+id/rl_use_top"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="5dp" />
    <WebView
        android:layout_below="@+id/pb_use_loading"
        android:id="@+id/wv_use_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>
</RelativeLayout>
